# Environment Configuration for Greenix Backend Server

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0
DB_NAME=pavithratraders

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Administrator

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp
UPLOAD_PATH=./uploads

# Razorpay Configuration (Payment Gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://yourapp.netlify.app,https://your-backend.onrender.com

# Security
BCRYPT_ROUNDS=12

# API Configuration
API_BASE_URL=https://your-backend.onrender.com
CLIENT_BASE_URL=https://yourapp.netlify.app

# Development Settings
DEBUG=true
ENABLE_LOGGING=true

# WhatsApp Notification (optional)
WHATSAPP_API_KEY=your_whatsapp_api_key
ADMIN_PHONE=+1234567890